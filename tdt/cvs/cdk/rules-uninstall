# install rules for cdk
#
# fields (separated by ';')
#   name
#   rules ('make', 'install', 'link', 'archive') and arguments
#   ...
#

#
# Core
#
#squashfs
#ipkg_utils;make:uninstall

#
# root
#
busybox;make:uninstall:CONFIG_PREFIX=TARGET;shellconfigdel:/bin/ash
ipkg;make:uninstall:DESTDIR=TARGET;remove:TARGET/usr/bin/ipkg;remove:TARGET/etc/ipkg;remove:TARGET/etc/ipkg.conf

#
# net apps
#
portmapx;make:uninstall:BASEDIR=TARGET
nfs_utils;make:uninstall:DESTDIR=TARGET
#vsftpd;make:uninstall
#samba;make:uninstall
#netio;make:uninstall
lighttpd;make:uninstall:DESTDIR=TARGET;initdconfigdel:lighttpd
#ethtool;make:uninstall

#
# contrib apps
#
#xfsprogs;make:uninstall
mc;make:uninstall:DESTDIR=TARGET;remove:TARGET/usr/lib/mc;remove:TARGET/usr/share/mc
sdparm;make:uninstall:DESTDIR=TARGET;remove:TARGET/usr/share/man/man8/sdparm.8.gz
sg3_utils;make:uninstall:DESTDIR=TARGET

#
# contrib libs
#

#
# development
#
ruby;make:uninstall:DESTDIR=TARGET

